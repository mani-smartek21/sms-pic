		<field name="trailer_columns" type="list" default="4" label="COM_SOMOVIEDB_CONF_TRAILERS_COLUMNS" description="COM_SOMOVIEDB_CONF_TRAILERS_COLUMNS_DESC">
			<option value="3">3</option>	
			<option value="4">4</option>	
		</field>
	</fieldset>

	<fieldset name="licenseupdate">
		<field name="joomshaper_email" type="email" label="COM_SOMOVIEDB_CONF_JOOMSHAPER_EMAIL" description="COM_SOMOVIEDB_CONF_JOOMSHAPER_EMAIL_DESC" />
		<field name="joomshaper_license_key" type="text" label="COM_SOMOVIEDB_CONF_JOOMSHAPER_LICENSE_KEY" description="COM_SOMOVIEDB_CONF_JOOMSHAPER_LICENSE_KEY_DESC" />
	</fieldset>

	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" class="inputbox" filter="rules" component="com_spmoviedb" section="component" />
	</fieldset>	
</config>