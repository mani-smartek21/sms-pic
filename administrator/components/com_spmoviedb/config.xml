			<option value="3">3</option>	
			<option value="4">4</option>	
		</field>
		<field type="text" name="review_limit" default="12" label="COM_SOMOVIEDB_CONF_REVIEW_LIMIT" description="COM_SOMOVIEDB_CONF_REVIEW_LIMIT_DESC" />

		<field name="spacer1" type="spacer" hr="true" />
		<field type="text" name="celebrities_limit" default="12" label="COM_SOMOVIEDB_CONF_CELEBRITIES_LIMIT" description="COM_SOMOVIEDB_CONF_MOVIE_LIMIT_DESC" />
		<field name="celebrities_columns" type="list" default="4" label="COM_SOMOVIEDB_CONF_CELEBRITIES_COLUMNS" description="COM_SOMOVIEDB_CONF_CELEBRITIES_COLUMNS_DESC">	
			<option value="3">3</option>	
			<option value="4">4</option>	
		</field>

		<field name="spacer2" type="spacer" hr="true" />
		<field type="text" name="search_limit" default="12" label="COM_SOMOVIEDB_CONF_SEARCH_ITEM_LIMIT" description="COM_SOMOVIEDB_CONF_SEARCH_ITEM_LIMIT_DESC" />
		<field name="search_columns" type="list" default="4" label="COM_SOMOVIEDB_CONF_SEARCH_ITEM_COLUMNS" description="COM_SOMOVIEDB_CONF_SEARCH_ITEM_COLUMNS_DESC">
			<option value="3">3</option>	
			<option value="4">4</option>	
		</field>

		<field name="spacer3" type="spacer" hr="true" />
